<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/Ly_img_1"
        android:layout_width="214dp"
        android:layout_height="255dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="476dp"
        android:src="@drawable/gambar2" />

    <ImageView
        android:id="@+id/Ly_img_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/Ly_back"
        />

    <TextView
        android:id="@+id/Ly_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ly_img_3"
        android:layout_marginTop="-88dp"
        android:text="Layanan "
        android:layout_centerHorizontal="true"
        android:textColor="#2A566A"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ly_text3"
        android:layout_centerHorizontal="true"
        android:text="Konsultasikan masalahmu"
        android:textSize="15sp"
        android:textColor="#2A566A"
        android:id="@+id/Ly_text4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/Ly_text4"
        android:padding="20dp"
        android:id="@+id/Ly_ly_1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:paddingLeft="15sp"
            android:text="Hello "
            android:textColor="#656363"
            android:background="@drawable/button_shape"
            android:backgroundTint="#B6C9D1"
            android:id="@+id/Ly_edt_nama"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="ketikan sesuatu"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="#6598AF"
            android:id="@+id/Ly_edt_pesan"
            />
    </LinearLayout>

</RelativeLayout>
